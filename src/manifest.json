{
  "manifest_version": 3,
  "name": "Dubai Customs Wallet Extension",
  "description": "A Chrome extension for connecting with Dubai Customs Blockchain",
  "version": "1.2",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "https://*.finloge.com/*",
        "https://*.dubai-customs.gov/*"
      ],
      "js": ["content.bundle.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
       "popup.bundle.js",
        "approval.bundle.js",
        "popup-login.bundle.js",
        "bootstrap.bundle.min.js",
        "approval.html"
      ],
      "matches": [
        "*://*/*",
        "https://*.finloge.com/*",
        "https://*.dubai-customs.gov/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
    "*://127.0.0.1/*", 
      "*://*/*",
      "https://*.finloge.com/*",
      "https://*.dubai-customs.gov/*"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://log-iam-temp.finloge.com http://13.233.172.115:3000; frame-src 'self';"
  }
}
