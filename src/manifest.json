{
  "manifest_version": 3,
  "name": "Dubai Customs Wallet Extension",
  "description": "A Chrome extension for connecting with Dubai Customs Blockchain",
  "version": "1.3",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*",
    "https://wallet-api.dubaicustoms.network/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "https://*.finloge.com/*",
        "https://*.dubai-customs.gov/*",
        "http://127.0.0.1:8002/"
      ],
      "js": ["content.bundle.js","background.bundle.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.bundle.js",  
        "popup-login.bundle.js",
        "bootstrap.bundle.min.js"
      ],
      "matches": [
        "*://*/*",
        "https://*.finloge.com/*",
        "https://*.dubai-customs.gov/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://*/*",
      "https://wallet-api.dubaicustoms.network/*"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://wallet-api.dubaicustoms.network http://127.0.0.1:8005/; frame-src 'none';"
  }
}
